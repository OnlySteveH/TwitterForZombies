<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @zombie.name %>
</p>

<p>
  <strong>Bio:</strong>
  <%= @zombie.bio %>
</p>

<strong>Decomposition phase: </strong>
<span id="decomp"><%= @zombie.decomp %></span>

<div id="custom_phase">
	<%= form_for @zombie,	url: custom_decomp_zombie_path(@zombie), remote: true do |f| %>
		<strong>Custom phase: </strong>
		<%= f.text_field :decomp %>
		<%= f.submit "Set" %>
	<% end %>
</div>
<div id="custom_phase2">
	<%= form_for @zombie,	url: custom_decomp_zombie_path(@zombie) do |f| %>
		<strong>Custom phase as JSON: </strong>
		<%= f.text_field :decomp %>
		<%= f.submit "Set" %>
	<% end %>
</div>

<%= link_to 'Edit', edit_zombie_path(@zombie) %> |
<%= link_to 'Back', zombies_path %>
